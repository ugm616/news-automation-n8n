# ==============================================
# News Automation System - Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# n8n Configuration
# ==============================================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password

# Execution Settings
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# Storage
N8N_USER_FOLDER=~/n8n-data

# ==============================================
# AI Services
# ==============================================

# OpenAI (GPT-4 for script generation)
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=500

# ElevenLabs (Text-to-Speech) - Option 1
ELEVENLABS_API_KEY=your-elevenlabs-key-here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
# Voice IDs:
# Rachel (news anchor): 21m00Tcm4TlvDq8ikWAM
# Adam (male news): pNInz6obpgDQGcFmaJgB
# Antoni (authoritative): ErXwobaYiN019PkySvjV

# Google Cloud TTS (Alternative) - Option 2
GOOGLE_TTS_API_KEY=your-google-tts-key-here
GOOGLE_TTS_VOICE=en-US-Neural2-D
GOOGLE_TTS_LANGUAGE=en-US

# ==============================================
# Image APIs (Royalty-Free)
# ==============================================

# Pexels (Free)
PEXELS_API_KEY=your-pexels-key-here

# Unsplash (Free)
UNSPLASH_ACCESS_KEY=your-unsplash-key-here

# ==============================================
# Video Platforms
# ==============================================

# Rumble (Primary Monetization)
RUMBLE_EMAIL=your@email.com
RUMBLE_PASSWORD=your-rumble-password
RUMBLE_USERNAME=your-username

# YouTube (Shorts)
YOUTUBE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REFRESH_TOKEN=your-refresh-token
YOUTUBE_CHANNEL_ID=your-channel-id

# Instagram (Reels)
INSTAGRAM_USER_ID=your-instagram-user-id
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-business-account-id

# Facebook (Reels)
FACEBOOK_PAGE_ID=your-facebook-page-id
FACEBOOK_PAGE_TOKEN=your-facebook-page-token
FACEBOOK_APP_ID=your-app-id
FACEBOOK_APP_SECRET=your-app-secret

# TikTok (Manual or Third-Party)
TIKTOK_USERNAME=your-tiktok-username
TIKTOK_PASSWORD=your-tiktok-password
# Or third-party service:
TIKTOK_API_KEY=your-third-party-api-key

# Snapchat
SNAPCHAT_USERNAME=your-snapchat-username

# ==============================================
# Database
# ==============================================

# Option 1: PostgreSQL
DATABASE_URL=postgresql://newsbot:your-password@localhost:5432/news_automation
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=news_automation
DATABASE_USER=newsbot
DATABASE_PASSWORD=your-database-password

# Option 2: Airtable (Alternative)
AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX
AIRTABLE_TABLE_NAME=processed_stories

# ==============================================
# Video Generation Settings
# ==============================================

# Paths
VIDEO_OUTPUT_PATH=./output/videos
IMAGE_CACHE_PATH=./output/images
AUDIO_OUTPUT_PATH=./output/audio
SUBTITLE_OUTPUT_PATH=./output/subtitles

# FFmpeg Settings
FFMPEG_THREADS=4
VIDEO_QUALITY=23
VIDEO_PRESET=fast

# Long-Form Video (Rumble)
LONGFORM_WIDTH=1920
LONGFORM_HEIGHT=1080
LONGFORM_FPS=30
LONGFORM_DURATION_MIN=600
LONGFORM_DURATION_MAX=900

# Short-Form Video (Teasers)
SHORTFORM_WIDTH=1080
SHORTFORM_HEIGHT=1920
SHORTFORM_FPS=30
SHORTFORM_DURATION=30

# ==============================================
# Content Settings
# ==============================================

# Story Selection
STORIES_PER_CYCLE=5
RSS_FEED_LIMIT=20

# Script Generation
SCRIPT_LENGTH_LONGFORM=120
SCRIPT_LENGTH_TEASER=25
SCRIPT_TONE=professional
SCRIPT_LANGUAGE=en-US

# ==============================================
# Scheduling
# ==============================================

# Workflow execution interval
SCHEDULE_INTERVAL_HOURS=2
SCHEDULE_CRON=0 */2 * * *

# ==============================================
# Monitoring & Alerts
# ==============================================

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=your-email@gmail.com

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# ==============================================
# Performance & Limits
# ==============================================

# API Rate Limiting
OPENAI_RATE_LIMIT=60
PEXELS_RATE_LIMIT=200
UNSPLASH_RATE_LIMIT=50

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY_MS=2000

# Timeout Settings
API_TIMEOUT_MS=30000
UPLOAD_TIMEOUT_MS=300000

# ==============================================
# Feature Flags
# ==============================================

# Enable/Disable Platforms
ENABLE_RUMBLE=true
ENABLE_YOUTUBE=true
ENABLE_TIKTOK=true
ENABLE_INSTAGRAM=true
ENABLE_FACEBOOK=true
ENABLE_SNAPCHAT=false

# Features
ENABLE_SUBTITLES=true
ENABLE_BACKGROUND_MUSIC=true
ENABLE_LOWER_THIRDS=true
ENABLE_WATERMARK=true

# ==============================================
# Branding
# ==============================================

CHANNEL_NAME=Your News Channel
CHANNEL_LOGO_PATH=./assets/logo.png
WATERMARK_PATH=./assets/watermark.png
BRAND_COLOR_PRIMARY=#FF0000
BRAND_COLOR_SECONDARY=#000000

# ==============================================
# Development/Debug
# ==============================================

NODE_ENV=production
DEBUG_MODE=false
LOG_LEVEL=info
SAVE_DEBUG_FILES=false

# ==============================================
# Cost Tracking
# ==============================================

# Track costs for budgeting
OPENAI_COST_PER_1K_TOKENS=0.01
ELEVENLABS_COST_PER_CHAR=0.00022
GOOGLE_TTS_COST_PER_CHAR=0.000004

# ==============================================
# Notes
# ==============================================
# 1. Never commit this file with actual values
# 2. Add .env to .gitignore
# 3. Rotate API keys every 3-6 months
# 4. Use strong passwords
# 5. Enable 2FA on all services
# 6. Monitor API usage and costs regularly
